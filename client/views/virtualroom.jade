extends layout

block content
    div.container
        h1 #{title}

        form#joinform.form-horizontal(action='')
            fieldset
                // Username
                .control-group
                    label.control-label(for='username') Username
                    .controls
                        input#username.input-xlarge(name='username', type='text', placeholder='Enter username', required='')
                // Room name
                //.control-group
                    label.control-label(for='room') Room
                    .controls
                        input#room.input-xlarge(name='room', type='text', placeholder='Enter room', required='')
                // Room name advanced
                .control-group
                    label.control-label(for='room') Room
                    .controls
                        input#room.input-xlarge(name='room', type='text', placeholder='Enter room', required='', list="rooms")
                        datalist#rooms

                // Join Button
                .control-group
                    label.control-label(for='joinbutton')
                    .controls
                        button#joinbutton.btn.btn-primary(type='submit') Join
        .container
            .row
                .col-md-2
                    h3 Group Info
                .col-md-7
                    canvas#mycanvas(width='600', height='600')
                        | Your browser does not support canvas.
                .col-md-3
                    h3 Chat
                    textarea(class="form-control",rows='20',cols='50')
                    button(type="button",class="btn btn-primary") Enter

        script(src='//cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.5/socket.io.min.js')
        script(src='/scripts/canvas.js')
        script(src='/scripts/virtualroom.js')